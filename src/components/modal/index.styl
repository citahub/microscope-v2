.modal{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow-y: hidden;
  display: flex;
  flex-direction: column;
  z-index: 999;
  pointer-events: all;
}

.modalContent{
  flex: 1;
  overflow-x: hidden;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.modalContent > div {
  width: 80%;
  min-height: 100px;
  background-color: white;
  border-radius: 10px 10px;
  padding: 10px;
  position: relative;
  overflow-y: auto;
  overflow-x: hidden;
}
.modalClose {
  position: absolute;
  right: 10px;
  top: 10px;
}
.modalClose:hover{
  color: red;
  cursor: pointer
}
