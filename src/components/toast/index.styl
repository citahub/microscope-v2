.toast{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow-Y: hidden;
  display: flex;
  flex-direction: column;
  pointer-events: none;
}
.toast>div{
  width: 80%;
  background-color: rgba(0,0,0,0.8);
  border-radius: 2px;
  position: absolute;
  bottom: 30px;
  padding: 10px;
  margin-left: 10%;
  z-index: 9999;
  min-height: 32px
}
.toast>div>div {
  color: white;
  font-size: 12px;
  line-height: 12px;
  text-align: center
}
